div(id="request-call-modal", style="display: none;").modal.decor-block
  .modal__title.modal__title--max-width Оставить заявку на обратный звонок
  form(id="call_form", data-name="Заявка на обратный звонок").modal__form.form
    .form__item
      input(type="text", placeholder="Ваше имя", required).form__input._name
    .form__item
      input(type="tel", placeholder="Номер телефона", required).form__input._tel
    button(type="submit").modal__btn.btn Отправить
